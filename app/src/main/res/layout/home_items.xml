<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:id="@+id/home_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group name"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/cooking_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You are/are not cooking tonight "/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/who_cooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="{name} is cooking:    "/>


            <TextView
                android:id="@+id/meal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meal"/>

        </LinearLayout>

        <TextView
            android:id="@+id/deadline_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let them know by {time}"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Are you home? OR How many have RSVP'd "/>

            <TextView
                android:id="@+id/no_people_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/home_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home status"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
